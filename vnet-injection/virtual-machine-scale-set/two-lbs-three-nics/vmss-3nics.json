{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
    },
    "customerSubscriptionId": {
      "type": "string"
    },
    "customerResourceGroupName": {
      "type": "string"
    },
    "customerPublicIPAddressName": {
      "type": "string",
      "defaultValue": "customer-pip"
    },
    "customerVirtualNetworkName": {
      "type": "string",
      "defaultValue": "customer-vnet"
    },
    "customerTrustedSubnetName": {
      "type": "string",
      "defaultValue": "trusted"
    },
    "customerUntrustedSubnetName": {
      "type": "string",
      "defaultValue": "untrusted"
    },
    "providerVirtualNetworkName": {
      "type": "string",
      "defaultValue": "provider-vnet"
    },
    "providerSubnetName": {
      "type": "string",
      "defaultValue": "management"
    },
    "publicLoadBalancerName": {
      "type": "string",
      "defaultValue": "provider-public-lb"
    },
    "internalLoadBalancerName": {
      "type": "string",
      "defaultValue": "provider-internal-lb"
    },
    "internalLoadBalancerFrontendIPAddress": {
      "type": "string",
      "defaultValue": "10.0.0.10"
    },
    "vmssName": {
      "type": "string",
      "defaultValue": "[concat('vmss-', uniqueString(utcNow()))]",
      "metadata": {
        "description": "String used as a base for naming resources. Must be 3-61 characters in length and globally unique across Azure. A hash is prepended to this string for some resources, and resource-specific information is appended."
      },
      "maxLength": 61
    },
    "instanceCount": {
      "type": "int",
      "defaultValue": 2,
      "metadata": {
        "description": "Number of VM instances (100 or less)."
      },
      "maxValue": 100
    },
    "adminUsername": {
      "type": "string",
      "metadata": {
        "description": "Admin username on all VMs."
      },
      "defaultValue": "azureuser"
    },
    "adminKey": {
      "type": "securestring",
      "metadata": {
        "description": "SSH Key for the Virtual Machine."
      }
    }
  },
  "variables": {
    "networkApiVersion": "2021-05-01",
    "loadBalancerSku": "Standard",
    "loadBalancerBackendAddressPoolName": "bp1",
    "customerPublicIPAddressResourceId": "[resourceId(parameters('customerSubscriptionId'), parameters('customerResourceGroupName'), 'Microsoft.Network/publicIPAddresses', parameters('customerPublicIPAddressName'))]",
    "customerTrustedSubnetResourceId": "[resourceId(parameters('customerSubscriptionId'), parameters('customerResourceGroupName'), 'Microsoft.Network/virtualNetworks/subnets', parameters('customerVirtualNetworkName'), parameters('customerTrustedSubnetName'))]",
    "customerUntrustedSubnetResourceId": "[resourceId(parameters('customerSubscriptionId'), parameters('customerResourceGroupName'), 'Microsoft.Network/virtualNetworks/subnets', parameters('customerVirtualNetworkName'), parameters('customerUntrustedSubnetName'))]",
    "providerSubnetResourceId": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('providerVirtualNetworkName'), parameters('providerSubnetName'))]",
    "osType": {
      "publisher": "Canonical",
      "offer": "UbuntuServer",
      "sku": "18_04-lts-gen2",
      "version": "latest"
    },
    "imageReference": "[variables('osType')]",
    "linuxConfiguration": {
      "disablePasswordAuthentication": true,
      "ssh": {
        "publicKeys": [
          {
            "path": "[concat('/home/', parameters('adminUsername'), '/.ssh/authorized_keys')]",
            "keyData": "[parameters('adminKey')]"
          }
        ]
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Compute/virtualMachineScaleSets",
      "name": "[parameters('vmssName')]",
      "location": "[parameters('location')]",
      "apiVersion": "2017-12-01",
      "sku": {
        "name": "Standard_DS3_v2",
        "tier": "Standard",
        "capacity": "[parameters('instanceCount')]"
      },
      "tags": {
        "fastpathenabled": "true"
      },
      "dependsOn": [
      ],
      "properties": {
        "overprovision": "false",
        "upgradePolicy": {
          "mode": "Manual"
        },
        "virtualMachineProfile": {
          "storageProfile": {
            "osDisk": {
              "createOption": "FromImage",
              "caching": "ReadWrite"
            },
            "imageReference": "[variables('imageReference')]"
          },
          "osProfile": {
            "computerNamePrefix": "[parameters('vmssName')]",
            "adminUsername": "[parameters('adminUsername')]",
            "adminPassword": "[parameters('adminKey')]",
            "linuxConfiguration": "[variables('linuxConfiguration')]"
          },
          "networkProfile": {
            "networkInterfaceConfigurations": [
              {
                "name": "standardNic",
                "properties": {
                  "primary": true,
                  "ipConfigurations": [
                    {
                      "name": "ipConfig1",
                      "properties": {
                        "subnet": {
                          "id": "[variables('providerSubnetResourceId')]"
                        },
                        "primary": true,
                        "privateIPAddressVersion": "IPv4"
                      }
                    }
                  ]
                }
              },
              {
                "name": "elasticNic-trusted",
                "properties": {
                  "primary": false,
                  "nicType": "Elastic",
                  "ipConfigurations": [
                    {
                      "name": "ipConfig1",
                      "properties": {
                        "subnet": {
                          "id": "[variables('customerTrustedSubnetResourceId')]"
                        },
                        "primary": true,
                        "privateIPAddressVersion": "IPv4",
                        "loadBalancerBackendAddressPools": [
                          {
                            "id": "[resourceId('Microsoft.Network/loadBalancers/backendAddressPools', parameters('internalLoadBalancerName'), variables('loadBalancerBackendAddressPoolName'))]"
                          }
                        ]
                      }
                    }
                  ]
                }
              },
              {
                "name": "parentNic-trusted",
                "properties": {
                  "primary": false,
                  "ElasticNetworkInterfaceLinkConfigurations": [
                    {
                      "name": "elasticNic-trusted",
                      "Primary": true
                    }
                  ]
                }
              },
              {
                "name": "elasticNic-untrusted",
                "properties": {
                  "primary": false,
                  "nicType": "Elastic",
                  "ipConfigurations": [
                    {
                      "name": "ipConfig1",
                      "properties": {
                        "subnet": {
                          "id": "[variables('customerUntrustedSubnetResourceId')]"
                        },
                        "primary": true,
                        "privateIPAddressVersion": "IPv4",
                        "loadBalancerBackendAddressPools": [
                          {
                            "id": "[resourceId('Microsoft.Network/loadBalancers/backendAddressPools', parameters('publicLoadBalancerName'), variables('loadBalancerBackendAddressPoolName'))]"
                          }
                        ]
                      }
                    }
                  ]
                }
              },
              {
                "name": "parentNic-untrusted",
                "properties": {
                  "primary": false,
                  "ElasticNetworkInterfaceLinkConfigurations": [
                    {
                      "name": "elasticNic-untrusted",
                      "Primary": true
                    }
                  ]
                }
              }
            ]
          }
        }
      }
    }
  ]
}