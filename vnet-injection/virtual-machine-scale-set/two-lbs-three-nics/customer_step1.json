{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
    },
    "customerPublicIPAddressName": {
      "type": "string",
      "defaultValue": "customer-pip"
    },
    "customerVirtualNetworkName": {
      "type": "string",
      "defaultValue": "customer-vnet"
    },
    "customerTrustedSubnetName": {
      "type": "string",
      "defaultValue": "trusted"
    },
    "customerUntrustedSubnetName": {
      "type": "string",
      "defaultValue": "untrusted"
    },
    "customerVirtualNetworkAddressPrefix": {
      "type": "string",
      "defaultValue": "10.0.0.0/16"
    },
    "customerTrustedSubnetAddressPrefix": {
      "type": "string",
      "defaultValue": "10.0.0.0/24"
    },
    "customerUntrustedSubnetAddressPrefix": {
      "type": "string",
      "defaultValue": "10.0.1.0/24"
    }
  },
  "variables": {
    "networkApiVersion": "2021-05-01",
    "publicIPAddressSku": "Standard",
    "ipAllocationMethod": "Static"
  },
  "resources": [
    {
      "type": "Microsoft.Network/publicIPAddresses",
      "name": "[parameters('customerPublicIPAddressName')]",
      "location": "[parameters('location')]",
      "apiVersion": "[variables('networkApiVersion')]",
      "sku": {
        "name": "[variables('publicIPAddressSku')]"
      },
      "properties": {
        "publicIPAllocationMethod": "[variables('ipAllocationMethod')]"
      }
    },
    {
      "comments": "Virtual Network",
      "name": "[parameters('customerVirtualNetworkName')]",
      "type": "Microsoft.Network/virtualNetworks",
      "apiVersion": "[variables('networkApiVersion')]",
      "location": "[parameters('location')]",
      "tags": {
        "fastpathenabled": "true"
      },
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[parameters('customerVirtualNetworkAddressPrefix')]"
          ]
        },
        "subnets": [
          {
            "name": "[parameters('customerTrustedSubnetName')]",
            "properties": {
              "addressPrefix": "[parameters('customerTrustedSubnetAddressPrefix')]"
            }
          },
          {
            "name": "[parameters('customerUntrustedSubnetName')]",
            "properties": {
              "addressPrefix": "[parameters('customerUntrustedSubnetAddressPrefix')]"
            }
          }
        ]
      }
    }
  ]
}